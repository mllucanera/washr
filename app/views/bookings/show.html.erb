<h1>Bookings#show</h1>
<br>
<p>Car: <%= @booking.car.brand %></p>


<% if @booking.status == "washer_pending" %>
  <p> Status: <%= @booking.status%> </p>
  <%= link_to "pick", booking_path(@booking.id), method: :put, data: { confirm: "Are you sure you want to pick this wash?"}, class: "btn btn-success" %>
<% elsif @booking.washer == current_user && @booking.status == 'washing' %>
  <%= link_to "mark as completed", completed_path(@booking.id), method: :put, data: { confirm: "Are you sure you completed the task?"}, class: "btn btn-success" %>
<% else %>
<%= link_to 'more requests', bookings_path, class: "btn btn-success"%>
<% end %>



