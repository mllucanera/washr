<div class="wrapper">
  <div class="icon-box-title">
    <img src="<%= asset_url('car.png') %>" alt="" class="icon-box-title">
  </div>

  <div class="box-inline-title">
    <p>Which car do you want to wash?</p>
  </div>

  <div id="booking-new-js-handler">
    <% if @cars.empty? %>

      <div class="container" id="new-car-booking">
        <h2>Add your car:</h2>
        <%= render 'client/cars/form', car: @car, client: current_user %>
      </div>

      <div id="car-list"></div>

    <% else %>

      <div id="car-list">
        <% @cars.each do |car| %>
          <%= render '/shared/small_car_card_photo', car: car %>
        <% end %>
      </div>

      <div class="center">
        <button type="button" class="button-opacity btn-modal" id="add-car-index" data-toggle="modal" data-target="#car_form_modal">
          <i class="fas fa-plus-circle"></i> 
          Add new Car
        </button>
      </div>

    <% end %>

    <div class="container">

      <%= form_with model: @booking, id: :new_booking_form, class: :hidden do |f| %>
        <%= f.text_field :car_id, id: :car_id %>
        <%= f.text_field :address, value: params[:address] %>
        <%= f.submit 'submit', id: :submit_booking %>
      <% end %>

    </div>
  </div>
</div>

<%= render 'client/cars/car_form_modal', car: @car, client: current_user %>