<div id="index">
  <div class="container">
    <%= link_to root_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>

    <div class="modal fade" tabindex="-1" id="car-form-modal" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <%= render 'form', car: @car, client: current_user %>
        </div>
      </div>
    </div>

    <div id="new_index">
      <% @cars.each do |car| %>
        <%= render '/shared/small_car_card_client', car: car %>
      <% end %>

      <div class="center">
        <button type="button" class="button-opacity btn-modal" id="add-car-index" data-toggle="modal" data-target="#car-form-modal">
          <i class="fas fa-plus-circle"></i> 
          Add new Car
        </button>
      </div>
    </div>
  </div>
</div>







