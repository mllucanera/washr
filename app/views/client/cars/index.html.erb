<div id="index">
  <div class="container">
    <%= link_to root_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>

    <div class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
            <h4 class="modal-title" style="color: black;">Add New Car</h4>
          </div>

          <div class="modal-body">
            <%= render 'form', car: @car, client: current_user %>
          </div>

        </div>
      </div>
    </div>

    <div id="new_index">
      <% @cars.each do |car| %>
        <%= render '/shared/small_car_card_client', car: car %>
      <% end %>

      <div class="center">
        <button type="button" class="button-opacity btn-modal" id="add-car-index" data-toggle="modal" data-target=".modal">
          <i class="fas fa-plus-circle"></i> 
          Add new Car
        </button>
      </div>
    </div>
  </div>
</div>







