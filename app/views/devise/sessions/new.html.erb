<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="sign-in-container">
        <div class="logo-signup">
          <%= image_tag(asset_path("logo_carwash02.png"), class: "logo-xl") %>
        </div>

        <div class="login-form-custom">
          <div class="form-container">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="input-sign-up">
                <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "Username" %>
              </div>
              <div class="input-sign-up">
                <%= f.input :password, label: false, required: false, placeholder: "Password" %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "SIGN IN", class: "button-rounded btn-block" %>
            </div>
            <% end %>
            <div class="orline">
              <div class="white-line"></div>
              <p>or</p>
              <div class="white-line"></div>
            </div>
            <div>
              <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "button-rounded btn-block text-center" %>
            </div>
          </div>
          <div class="aditionals-container">
            <div>
              <p>Don't have an account yet? <%= link_to "Sign Up" , new_user_registration_path %> </p>
            </div>
            <div>
              <p><%= link_to "Forgot password?" , new_user_password_path %> </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
