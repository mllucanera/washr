<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="sign-in-container">
        <!-- LOGO -->
        <div class="logo-signup">
          <%= image_tag(asset_path("logo_carwash02.png"), class: "logo-xl") %>
        </div>
        <div class="login-form-custom">
          <!-- FORM -->
          <div class="form-container">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <!-- EMAIL -->
              <div class="input-sign-up">
                <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "Email" %>
              </div>
              <!-- PASSWORD -->
              <div class="input-sign-up">
                <%= f.input :password, label: false, required: false, placeholder: "Password" %>
                <!-- hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) -->
              </div>
              <!-- PASSWORD CONFIRMATION -->
              <div class="input-sign-up">
                <%= f.input :password_confirmation, label: false, required: false, placeholder: "Password Confirmation" %>
              </div>
            </div>
            <!-- SIGN UP -->
            <div class="form-actions">
              <%= f.button :submit, "SIGN UP", data: { confirm: "Please check your email to confirm your identity."}, class: "button-rounded btn-block" %>
            </div>
            <% end %>
            <div class="orline">
              <!-- OR -->
              <div class="white-line"></div>
              <p>or</p>
              <div class="white-line"></div>
            </div>
            <!-- SIGN UP WITH FB -->
            <div>
              <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "button-rounded btn-block text-center" %>
            </div>

            <div>
              <%= link_to "I am already a user", new_user_session_path, class: "button-rounded btn-block text-center already-user" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



