
<div class="cards-container">
  <div class="card-container" id="edges-rounded">
    <div class="card-text-group">
      <div class="car-title">
        <h5><%= car.name %></h5>
        <h6> <%= car.plate %> </h6>
      </div>
      <hr>
      <div class="car-description">
        <p> <%= car.brand %> <%= car.model %> </p>
        <p>  <%= car.color %></p>
      </div>
    </div>
    <div class="photo-square-sm" style="background-image: url('<%= cl_image_path car.photo %>');">
    </div>
  </div>

</div>
</div>
